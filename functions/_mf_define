[[ $EDITOR == *vim ]] &&
    local ftopts="-c 'set ft=zsh'" ||
[[ $EDITOR == *micro ]] &&
    local ftopts="-filetype=zsh"
eval $EDITOR "$ftopts" "${MFUNCDIR}/$1"  &&
    [[ -f "${MFUNCDIR}/$1" ]] &&
        autoload $1 || {
            echo "aborting..."
            return 1
        }
$edit || echo "new function '$1' created in $MFUNCDIR"
